<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="16dp"
android:background="@color/black"
tools:context=".Overall__FragmentInsertTransaction">

<Spinner
    android:id="@+id/spinnerTransactionType"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginBottom="8dp"
    android:entries="@array/transaction_types"
    android:prompt="@string/select_transaction_type"/>

<EditText
    android:id="@+id/editTextAmount"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/spinnerTransactionType"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="8dp"
    android:textColorHint="#FFFFFF"
    android:hint="@string/enter_amount"/>

<EditText
    android:id="@+id/editTextCategory"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/editTextAmount"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="8dp"
    android:textColorHint="#FFFFFF"
    android:hint="@string/enter_category"/>

<Button
    android:id="@+id/btnAddTransaction"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/editTextCategory"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp"
    android:text="@string/add_transaction"
    android:textColor="#FFF"
    app:backgroundTint="@color/circle_light_gray"/>

</androidx.constraintlayout.widget.ConstraintLayout>